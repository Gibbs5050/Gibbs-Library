<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/cat_shelve2"
    tools:context=".LibraryCatalogue">

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="411dp"
        android:layout_height="118dp"
        android:layout_marginTop="44dp"
        android:orientation="horizontal"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView11">

        <ImageView
            android:id="@+id/button_viewAllBooks"
            android:layout_width="137dp"
            android:layout_height="match_parent"
            android:contentDescription="@string/todo"
            app:srcCompat="@drawable/book_adventure" />

        <ImageView
            android:id="@+id/button_currentlyReadBooks"
            android:layout_width="136dp"
            android:layout_height="match_parent"
            android:contentDescription="TODO"
            app:srcCompat="@drawable/book_horror" />

        <ImageView
            android:id="@+id/button_alreadyReadBooks"
            android:layout_width="133dp"
            android:layout_height="match_parent"
            android:contentDescription="TODO"
            app:srcCompat="@drawable/book_fantasy" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="411dp"
        android:layout_height="118dp"
        android:layout_marginTop="72dp"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout3">

        <ImageView
            android:id="@+id/catalogue_crime"
            android:layout_width="137dp"
            android:layout_height="match_parent"
            app:srcCompat="@drawable/book_mystery" />

        <ImageView
            android:id="@+id/catalogue_education"
            android:layout_width="136dp"
            android:layout_height="match_parent"
            app:srcCompat="@drawable/book_education" />

        <ImageView
            android:id="@+id/catalogue_science"
            android:layout_width="133dp"
            android:layout_height="match_parent"
            app:srcCompat="@drawable/book_science" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout3"
        android:layout_width="411dp"
        android:layout_height="118dp"
        android:layout_marginTop="88dp"
        android:orientation="horizontal"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout">

        <ImageView
            android:id="@+id/catalogue_historical"
            android:layout_width="137dp"
            android:layout_height="match_parent"
            app:srcCompat="@drawable/book_historical" />

        <ImageView
            android:id="@+id/catalogue_journey"
            android:layout_width="136dp"
            android:layout_height="match_parent"
            app:srcCompat="@drawable/book_journal" />

        <ImageView
            android:id="@+id/catalogue_romance"
            android:layout_width="133dp"
            android:layout_height="match_parent"
            app:srcCompat="@drawable/book_romance" />
    </LinearLayout>

    <TextView
        android:id="@+id/textView11"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="36dp"
        android:text="CATALOGUE"
        android:textAlignment="center"
        android:textColor="#3D8EB1"
        android:textSize="34sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/catalogue_exit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@android:drawable/ic_menu_close_clear_cancel" />

</androidx.constraintlayout.widget.ConstraintLayout>