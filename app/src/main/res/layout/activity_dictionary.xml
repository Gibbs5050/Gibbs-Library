<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"

    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#F3E8E8"
    android:backgroundTint="#E5FBFF"
    tools:context=".DictionaryActivity">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/textView22"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="Discover New Words Today!"
            android:textAlignment="center"
            android:textColor="#0E77A4"
            android:textSize="20sp"
            android:textStyle="bold" />

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_margin="30sp"
            android:background="@drawable/roundstyle"
            app:cardBackgroundColor="#0E77A5"
            app:cardCornerRadius="8dp"
            app:cardElevation="8dp">

            <ImageView
                android:id="@+id/imageView4"
                android:layout_width="40dp"
                android:layout_height="50dp"
                android:layout_marginTop="3dp"
                android:layout_marginLeft="300dp"
                app:srcCompat="@drawable/gibbs_logo" />

            <androidx.appcompat.widget.SearchView
                android:id="@+id/searchView"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                app:defaultQueryHint="Type a word to search for..."
                app:iconifiedByDefault="false">

            </androidx.appcompat.widget.SearchView>
        </androidx.cardview.widget.CardView>

        <LinearLayout
            android:layout_margin="13dp"
            android:layout_marginTop="5dp"
            android:orientation="vertical"
            android:layout_width = "match_parent"
            android:layout_height="match_parent">
            <TextView
                android:id = "@+id/textView_word"
                android:textSize = "30sp"
                android:text = "Word"
                android:textColor = "#0E77A4"
                android:padding="8dp"
                android:textStyle="bold"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recycler_phonetics"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <TextView
                android:textSize = "30sp"
                android:text = "Meaning"
                android:textColor = "#0E77A4"
                android:padding="8dp"
                android:textStyle="bold"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <androidx.recyclerview.widget.RecyclerView
                android:id = "@+id/recycler_meanings"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

        </LinearLayout>

    </LinearLayout>

</ScrollView>