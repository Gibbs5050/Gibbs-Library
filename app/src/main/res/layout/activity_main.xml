<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/createAccount"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F3D9F3"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/imageView7"
        android:layout_width="385dp"
        android:layout_height="673dp"
        android:layout_marginTop="56dp"
        android:layout_marginBottom="56dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/rectangle_shape2" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="64dp"
        android:layout_height="53dp"
        android:layout_marginStart="44dp"
        android:layout_marginTop="96dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/splash_screen_logoo" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="250dp"
        android:layout_height="57dp"
        android:layout_marginEnd="56dp"
        android:layout_marginBottom="12dp"
        android:text="@string/gibbs_libraryText"
        android:textColor="#E9E4F3"
        android:textSize="40sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/TitleID_description"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/TitleID_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="12dp"
        android:fontFamily="serif"
        android:text="@string/textTwo"
        android:textColor="#C1C1DD"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="@+id/textView"
        app:layout_constraintTop_toBottomOf="@+id/imageView2" />

    <EditText
        android:id="@+id/editLoginTextEmail"
        android:layout_width="0dp"
        android:layout_height="60dp"
        android:layout_marginStart="57dp"
        android:layout_marginTop="78dp"
        android:layout_marginEnd="57dp"
        android:layout_marginBottom="85dp"
        android:autofillHints=""
        android:ems="10"
        android:hint="@string/email_addressHint"
        android:inputType="textEmailAddress"
        android:textColor="#EFE6E6"
        android:textColorHint="#757575"
        app:layout_constraintBottom_toBottomOf="@+id/editLoginTextPassword"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/TitleID_description" />

    <Button
        android:id="@+id/buttonLogin"
        android:layout_width="129dp"
        android:layout_height="48dp"
        android:layout_marginTop="46dp"
        android:layout_marginBottom="46dp"
        android:backgroundTint="#350D75"
        android:text="@string/loginButton"
        android:textColor="@color/white"
        app:layout_constraintBottom_toTopOf="@+id/forgot_passwordID"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editLoginTextPassword" />

    <EditText
        android:id="@+id/editLoginTextPassword"
        android:layout_width="0dp"
        android:layout_height="60dp"
        android:layout_marginStart="57dp"
        android:layout_marginTop="163dp"
        android:layout_marginEnd="57dp"
        android:layout_marginBottom="162dp"
        android:autofillHints=""
        android:ems="10"
        android:hint="@string/LoginPasswordHint"
        android:inputType="textPassword"
        android:textColorHint="#757575"
        app:layout_constraintBottom_toBottomOf="@+id/forgot_passwordID"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/TitleID_description" />

    <TextView
        android:id="@+id/forgot_passwordID"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="40dp"
        android:layout_marginBottom="104dp"
        android:text="@string/ForgotPassword_textLink"
        android:textColor="#1E1A22"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="@+id/imageView7"
        app:layout_constraintStart_toStartOf="@+id/imageView7" />

    <TextView
        android:id="@+id/RegisterLoginID"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="112dp"
        android:layout_marginTop="52dp"
        android:text="@string/Register_textLink"
        android:textSize="16sp"
        app:layout_constraintStart_toEndOf="@+id/forgot_passwordID"
        app:layout_constraintTop_toBottomOf="@+id/buttonLogin" />

    <ProgressBar
        android:id="@+id/progressBar"
        style="?android:attr/progressBarStyleLarge"
        android:layout_width="51dp"
        android:layout_height="41dp"
        android:layout_centerInParent="true"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="28dp"
        android:layout_marginBottom="33dp"
        android:indeterminate="true"
        android:max="100"
        android:progress="0"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="@+id/imageView7"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/forgot_passwordID"
        tools:ignore="MissingConstraints" />

</androidx.constraintlayout.widget.ConstraintLayout>