<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#7FC0DD"
    tools:context=".WebSwitchActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="500dp"
        android:layout_height="750dp"
        android:layout_below="@+id/linearLayout"
        android:layout_marginTop="0dp">

        <WebView
            android:id="@+id/webview"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

        </WebView>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="42dp"
        android:background="#FCFFFF"
        android:backgroundTint="#0E77A6"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/catalogue_exit2"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="2dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@android:drawable/ic_menu_close_clear_cancel" />

        <TextView
            android:id="@+id/textView9"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="5dp"
            android:padding="4dp"
            android:text="Gibbs File Reader"
            android:textColor="@color/black"
            android:textSize="25sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/editTextMe"
            android:layout_width="235dp"
            android:layout_height="39dp"
            android:layout_marginTop="4dp"
            android:layout_weight="1"
            android:ems="10"
            android:hint="Search web"
            android:inputType="textPersonName"
            android:textAlignment="center" />

        <ImageView
            android:id="@+id/search_bars"
            android:layout_width="45dp"
            android:layout_height="40dp"
            android:layout_marginTop="4dp"
            android:src="@android:drawable/ic_menu_search" />

    </LinearLayout>

</RelativeLayout>