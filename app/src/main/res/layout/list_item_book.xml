<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/parent"
    android:layout_margin="5dp"
    app:cardCornerRadius="7dp"
    app:cardElevation="7dp">

    <RelativeLayout
        android:layout_width="150dp"
        android:background="#D8E8EF"
        android:layout_height="match_parent">

        <RelativeLayout
            android:id="@+id/colaRelLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#D5E5EC"
            android:backgroundTint="#D5E5EC">

            <ImageView
                android:id="@+id/imgBook"
                android:layout_width="match_parent"
                android:layout_height="221dp"
                android:src="@drawable/book_list1" />

            <TextView
                android:id="@+id/txtBookName"
                android:layout_width="89dp"
                android:layout_height="28dp"
                android:layout_below="@+id/imgBook"
                android:layout_marginStart="7dp"
                android:layout_marginTop="10dp"
                android:textColor="#356378"
                android:layout_marginEnd="19dp"
                android:layout_marginBottom="7dp"
                android:layout_toStartOf="@+id/btnDownArrow"
                android:text="Book Name"
                android:textSize="12dp"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/btnDownArrow"
                android:layout_width="29dp"
                android:layout_height="22dp"
                android:layout_below="@+id/imgBook"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="6dp"
                android:src="@mipmap/ic_dropp" />


        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/expandableRelLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/colaRelLayout"
            android:visibility="gone"> <!-- do a drop down-->


            <TextView

                android:id="@+id/authorTxt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Author"
                android:textColor="#356378"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txtAuthor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#356378"
                android:layout_below="@+id/authorTxt"
                android:text="Gibbs" />  <!-- constraint aligning-->


            <TextView
                android:id="@+id/txtShortDesc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/txtAuthor"
                android:textColor="#356378"
                android:layout_marginTop="7dp"
                android:text="Short Description" />

            <ImageView
                android:id="@+id/btnUpArrow"
                android:layout_width="43dp"
                android:layout_height="44dp"
                android:layout_above="@+id/txtShortDesc"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="2dp"
                android:layout_marginBottom="2dp"
                android:src="@mipmap/ic_dropp_up" />


        </RelativeLayout>

    </RelativeLayout>




</com.google.android.material.card.MaterialCardView>