<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/parent"
    android:layout_margin="5dp"
    app:cardCornerRadius="7dp"
    app:cardElevation="7dp">

    <RelativeLayout
        android:layout_width="110dp"
        android:background="#D8E8EF"
        android:layout_height="match_parent">

        <RelativeLayout
            android:id="@+id/colaRelLayout"
            android:layout_width="match_parent"
            android:layout_height="206dp"
            android:background="#D5E5EC"
            android:backgroundTint="#D5E5EC">

            <ImageView
                android:id="@+id/imgBook"
                android:layout_width="wrap_content"
                android:layout_height="160dp"
                android:src="@drawable/book_list1" />

            <TextView
                android:id="@+id/txtBookName"
                android:layout_width="79dp"
                android:layout_height="27dp"
                android:layout_below="@+id/imgBook"
                android:layout_marginStart="7dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="5dp"
                android:layout_marginBottom="7dp"
                android:layout_toStartOf="@+id/btnDownArrow"
                android:text="Book Name"
                android:textColor="#356378"
                android:textSize="10sp"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/btnDownArrow"
                android:layout_width="22dp"
                android:layout_height="22dp"
                android:layout_below="@+id/imgBook"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="2dp"
                android:src="@mipmap/ic_dropp" />


        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/expandableRelLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/colaRelLayout"
            android:visibility="visible"> <!-- do a drop down-->


            <TextView

                android:id="@+id/authorTxt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Author"
                android:textColor="#356378"
                android:textStyle="bold" />

            <!-- constraint aligning-->


            <TextView
                android:id="@+id/txtAuthor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/authorTxt"
                android:layout_marginTop="3dp"
                android:text="Gibbs"
                android:textColor="#356378" />

            <TextView
                android:id="@+id/txtShortDesc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/txtAuthor"
                android:layout_marginTop="4dp"
                android:text="Short Description"
                android:textColor="#356378"
                android:textSize="8sp" />

            <ImageView
                android:id="@+id/btnUpArrow"
                android:layout_width="33dp"
                android:layout_height="26dp"
                android:layout_below="@+id/authorTxt"
                android:layout_alignBottom="@+id/authorTxt"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="-9dp"
                android:layout_marginEnd="0dp"
                android:layout_marginBottom="-17dp"
                android:src="@mipmap/ic_dropp_up" />


        </RelativeLayout>

    </RelativeLayout>




</com.google.android.material.card.MaterialCardView>