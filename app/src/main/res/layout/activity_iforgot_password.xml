<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#0E77A6"
    tools:context=".IForgotPassword">

    <TextView
        android:id="@+id/textView5"
        android:layout_width="243dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="132dp"
        android:text="ibbs Library"
        android:textColor="#F2FAFE"
        android:textSize="36sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/bannerReset3"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/bannerReset3"
        app:layout_constraintVertical_bias="1.0" />

    <ImageView
        android:id="@+id/bannerReset3"
        android:layout_width="78dp"
        android:layout_height="74dp"
        android:layout_marginStart="72dp"
        android:layout_marginTop="68dp"
        android:contentDescription="TODO"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/gibbs_logo" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:padding="6dp"
        android:text="@string/powered_by_gibbs_techText"
        android:textColor="#E2F2FA"
        android:textSize="15sp"
        android:textStyle="normal"
        app:layout_constraintBottom_toTopOf="@+id/progressBarReset"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <ProgressBar
        android:id="@+id/progressBarReset"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="193dp"
        android:layout_height="25dp"
        android:layout_marginBottom="16dp"
        android:indeterminate="true"
        android:max="100"
        android:progress="0"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/titleID_description2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:fontFamily="serif"
        android:text="@string/textTwo"
        android:textColor="#55C2C1"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.602"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView5" />

    <EditText
        android:id="@+id/editTextForgotEmailAddress"
        android:layout_width="292dp"
        android:layout_height="48dp"
        android:layout_marginTop="132dp"
        android:autofillHints=""
        android:background="@drawable/roundstyle"
        android:backgroundTint="#98D5F1"
        android:ems="10"
        android:hint="@string/enter_email_address"
        android:inputType="textEmailAddress"
        android:textAlignment="center"
        android:textAppearance="@style/TextAppearance.AppCompat.Display1"
        android:textColor="#0E0D0D"
        android:textSize="20sp"
        android:typeface="normal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/titleID_description2" />

    <Button
        android:id="@+id/resetPasswordButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="84dp"
        android:backgroundTint="#0A1F29"
        android:text="Reset Password"
        android:textColor="#F8F5F5"
        android:textSize="16sp"
        app:iconTint="#0A1F29"
        app:layout_constraintEnd_toEndOf="@+id/editTextForgotEmailAddress"
        app:layout_constraintStart_toStartOf="@+id/editTextForgotEmailAddress"
        app:layout_constraintTop_toBottomOf="@+id/editTextForgotEmailAddress" />

    <TextView
        android:id="@+id/resetLogin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Go Back to Login!"
        android:textColor="#E5F6FD"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/resetPasswordButton" />
</androidx.constraintlayout.widget.ConstraintLayout>