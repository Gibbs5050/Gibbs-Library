<?xml version="1.0" encoding="utf-8"?>
<!--create a drawer layout -->
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawerLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F6F6F8"
    tools:context=".DashboardFragment">

    <!-- TODO: Update blank fragment layout -->

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:backgroundTint="#F6F6F8"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:id="@+id/layoutToolbar"
            android:layout_width="match_parent"
            android:layout_height="?actionBarSize"
            android:background="@color/colorPrimary"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingStart="15dp"
            android:paddingEnd="15dp"
            app:layout_constraintTop_toTopOf="parent">
            <ImageView
                android:id="@+id/imageMenu"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:contentDescription="@string/app_name"
                android:src="@drawable/ic_menu_24"


                app:tint="@color/white" />

            <TextView
                android:id="@+id/textTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:text="@string/app_name"
                android:textColor="@color/white"
                android:textSize="18sp"
                android:textStyle="bold"

                />

        </LinearLayout>


        <ImageView
            android:id="@+id/imageViewSelectBook"
            android:layout_width="629dp"
            android:layout_height="219dp"
            android:layout_marginTop="28dp"
            android:contentDescription="select book"
            android:src="@drawable/shelf_image_view"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.502"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/layoutToolbar" />

        <Button
            android:id="@+id/button_viewAllBooks"
            android:layout_width="258dp"
            android:layout_height="48dp"
            android:layout_marginTop="16dp"
            android:text="My Library"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.503"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView8" />

        <Button
            android:id="@+id/button_currentlyReadBooks"
            android:layout_width="258dp"
            android:layout_height="48dp"
            android:layout_marginTop="8dp"
            android:text="Continue Reading"
            app:layout_constraintEnd_toEndOf="@+id/button_viewAllBooks"
            app:layout_constraintStart_toStartOf="@+id/button_viewAllBooks"
            app:layout_constraintTop_toBottomOf="@+id/button_viewAllBooks" />

        <Button
            android:id="@+id/button_alreadyReadBooks"
            android:layout_width="258dp"
            android:layout_height="48dp"
            android:layout_marginTop="8dp"
            android:text="Already Read Books"
            app:layout_constraintEnd_toEndOf="@+id/button_currentlyReadBooks"
            app:layout_constraintStart_toStartOf="@+id/button_currentlyReadBooks"
            app:layout_constraintTop_toBottomOf="@+id/button_currentlyReadBooks" />

        <Button
            android:id="@+id/myFavorite"
            android:layout_width="258dp"
            android:layout_height="48dp"
            android:layout_marginTop="12dp"
            android:text="My Favourite"
            app:layout_constraintEnd_toEndOf="@+id/button_alreadyReadBooks"
            app:layout_constraintStart_toStartOf="@+id/button_alreadyReadBooks"
            app:layout_constraintTop_toBottomOf="@+id/button_alreadyReadBooks" />

        <Button
            android:id="@+id/myDictionary"
            android:layout_width="258dp"
            android:layout_height="48dp"
            android:layout_marginTop="4dp"
            android:text="Go To My Dictionary"
            app:layout_constraintEnd_toEndOf="@+id/myFavorite"
            app:layout_constraintStart_toStartOf="@+id/myFavorite"
            app:layout_constraintTop_toBottomOf="@+id/myFavorite" />

        <Button
            android:id="@+id/aboutApp"
            android:layout_width="258dp"
            android:layout_height="48dp"
            android:text="About"
            app:layout_constraintEnd_toEndOf="@+id/myDictionary"
            app:layout_constraintStart_toStartOf="@+id/myDictionary"
            app:layout_constraintTop_toBottomOf="@+id/myDictionary" />

        <TextView
            android:id="@+id/textView8"
            android:layout_width="165dp"
            android:layout_height="30dp"
            android:layout_marginTop="4dp"
            android:text="@string/gibbs_library_textBanner"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.565"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imageViewSelectBook" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <com.google.android.material.navigation.NavigationView
        android:id="@+id/navigationView"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"/>

</androidx.drawerlayout.widget.DrawerLayout>